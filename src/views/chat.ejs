<%- include('includes/header') %>
<script src="./assets/js/chat.js" defer></script>
<main id="main" class="main">
  <div class="contents">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb-main">
            <h4 class="text-capitalize breadcrumb-title">채팅</h4>
            <div class="breadcrumb-action justify-content-center flex-wrap">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/"><i class="uil uil-estate"></i>Work Flow</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">채팅</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="chat-area d-flex mb-40">
      <div class="mb-lg-0 mb-40 chat-sidebar">
        <div class="sidebar-group left-sidebar chat_sidebar">
          <div id="chat" class="left-sidebar-wrap radius-xl active">
            <div class="chat-wrapper py-25">
              <div class="search-header">
                <form class="d-flex align-items-center">
                  <img src="./assets/img/svg/search.svg" alt="search" class="svg" />
                  <input
                    class="form-control me-sm-2 border-0 box-shadow-none"
                    type="search"
                    placeholder="Search"
                    aria-label="Search"
                  />
                </form>
              </div>
              <!-- Ends: .search-header -->
              <div class="search-tab">
                <ul class="nav ap-tab-main border-bottom text-capitalize" id="ueberTab" role="tablist">
                  <li class="nav-item me-0" style="width: 50%; text-align: center">
                    <a
                      class="nav-link active"
                      id="first-tab"
                      data-bs-target="#panel_b_first"
                      data-bs-toggle="tab"
                      href="#first"
                      role="tab"
                      aria-selected="true"
                      >보드 채팅방</a
                    >
                  </li>
                  <li class="nav-item me-0" style="width: 50%">
                    <a
                      class="nav-link group-notification"
                      id="second-tab"
                      data-bs-target="#panel_b_second"
                      data-bs-toggle="tab"
                      href="#second"
                      role="tab"
                      aria-selected="false"
                      style="justify-content: center"
                      >1:1 채팅방</a
                    >
                  </li>
                </ul>
              </div>
              <div class="tab-content">
                <div class="tab-pane fade show active" id="panel_b_first" role="tabpanel" aria-labelledby="first-tab">
                  <ul class="user-list" id="boardChatList">
                    <div class="nav flex-column text-start" id="chat-list-tab" role="tablist"></div>
                  </ul>
                </div>
                <div class="tab-pane fade" id="panel_b_second" role="tabpanel" aria-labelledby="second-tab">
                  <ul class="user-list">
                    <li>
                      <div class="user-button-top">
                        <button
                          type="button"
                          class="border bg-normal color-gray rounded-pill content-center"
                          data-bs-toggle="modal"
                          data-bs-target="#newChatModal"
                        >
                          <img class="svg" src="./assets/img/svg/edit.svg" alt="edit" />새로운 채팅
                        </button>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>

              <!-- Ends: .search-body -->
            </div>
            <!-- Ends: .chat-wrapper -->
          </div>
        </div>
        <!-- Ends: .sidebar group -->
      </div>
      <!-- Ends: .mb-lg-0 -->
      <div class="tab-content" id="v-pills-tabContent"></div>
      <!-- Ends: .tab-content -->
    </div>
    <!-- Ends: .chat-area -->
  </div>
  <div class="modal-basic modal fade show" id="newChatModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
      <div class="modal-content modal-bg-white">
        <div class="modal-header">
          <h6 class="modal-title">1:1 채팅방 만들기</h6>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <img src="./assets/img/svg/x.svg" alt="x" class="svg" />
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group mb-25">
            <span class="search-icon uil uil-search"></span>
            <label style="margin-bottom: 10px">이메일 검색</label>
            <div style="display: flex">
              <input
                class="form-control form-control-lg"
                type="text"
                id="searchEmail"
                style="width: 80%; margin-right: 10px"
                placeholder="유저의 이메일을 입력하세요."
              />
              <button type="button" class="btn btn-primary btn-sm" style="width: 15%; height: 50px">검색</button>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
  <!-- ends: .modal-Basic -->
</main>
<%- include('includes/footer') %>
